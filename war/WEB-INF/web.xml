<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>getClientView</servlet-name>
    <servlet-class>name.shamansir.sametimed.server.WavesClientViewServiceImpl</servlet-class>
  </servlet> 
  
  <servlet>
    <servlet-name>executeClientCommand</servlet-name>
    <servlet-class>name.shamansir.sametimed.wave.CommandExecutorServlet</servlet-class>
  </servlet>  
  
  <servlet-mapping>
    <servlet-name>getClientView</servlet-name>
    <url-pattern>/same_timed/get_client_view</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>executeClientCommand</servlet-name>
    <url-pattern>/same_timed/cmd_exec</url-pattern>
  </servlet-mapping>   
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>sametimed.html</welcome-file>
  </welcome-file-list>

</web-app>
